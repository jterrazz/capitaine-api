{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "NodeNext",

    "paths": {
      "@adapters/*": ["./src/adapters/*"],
      "@application/*": ["./src/application/*"],
      "@configuration/*": ["./src/configuration/*"],
      "@domain/*": ["./src/domain/*"],
      "@ports/*": ["./src/ports/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@utils/*": ["./src/utils/*"],
      "@tests/*": ["./tests/*"]
    },
    "types" : ["node", "jest"],

    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
